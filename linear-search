#include <bits/stdc++.h>
using namespace std;

bool search(int arr[], int n, int x)
{
	for (int i = 0; i < n; i++){
		if (arr[i] == x)
			return 1;
            
    }
    return 0;
}

// Driver code
int main()
{
	int arr[] = { 3, 4, 1, 7, 5 };
	int n = sizeof(arr) / sizeof(int);
	int x;
    
    
    //cout<<"enter the element for searched = ";
    cin>>x;

	bool found = search(arr, n, x);
	if (found)
		cout << x<<" "<<" is present in the array ";
    
	else{
        cout << x <<" "<<"is not present in the array";
    }

	

	return 0;
}

